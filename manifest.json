{
    "manifest_version": 3,
    "name": "Clickable Images",
    "version": "1.1",
    "description": "Make all images clickable.",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "32": "images/icon32.png",
        "72": "images/icon72.png",
        "128": "images/icon128.png"
    },
    "action": {
        "default_icon": {
            "32": "images/icon32.png",
            "72": "images/icon72.png",
            "128": "images/icon128.png"
        },
        "default_title": "Clickable Images"
    }
}